<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 ms-auto">
        <h1>Editing Book</h1>


         <% if @book.errors.any? %>
        <div>
            <%= @book.errors.count %>errors prohibited this obj from being saved:</br>
           <ul class="h6">
             <% @book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
             <% end %>
           </ul>
        </div>
       <% end %>

        <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <%= f.label "Title" %>
          <%= f.text_field :title, autofocus: true, class:"form-control", placeholder:"Title" %>
          </div>
          <div class="form-group">
            <%= f.label "Opinion" %>
          <%= f.text_area :body, autofocus: true, class:"form-control", placeholder:"Opinion" %>
          </div>
          <div class="form-group">
          <%= f.submit "Update Book", class:"btn btn-success" %>
        </div>
        <%= link_to "show", book_path(@book.id) %>
        |
        <%= link_to "back", books_path %>
      <% end %>
      </div>
    </div>
  </div>
</main>