<main>
 <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
         <% if @user.errors.any? %>
         <div id="error_explanation" class="h3 text-red">
          <%= @user.errors.count %>errors prohibited this obj from being saved:</br>
         <ul class="h6">
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
         </ul>
        </div>
       <% end %>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
           <%= f.label "Name"%></br>
           <%= f.text_field :name, autofocus: true,  placeholder:"name"%>
          </div>
          <div class="form-group">
           <%= f.label "Image" %></br>
           <%= f.attachment_field :profile_image, placeholder: "ファイルを選択" %>
          </div>
          <div>
           <%= f.label "introduction" %></br>
           <%= f.text_area :introduction, autofocus: true, placeholder:"introduction"%>
          </div>
          <div class="form-group">
           <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
       <% end %>
     </div>
   </div>
  </div>
</main>